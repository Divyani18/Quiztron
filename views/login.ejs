<%- include('partials/head') %>

<body>

    <%- include('partials/navbar1') %>

    <div class="loginPage flex-container">
        <div class="left">
            
        </div>

        <div class="login card py-5 px-4 border rounded">
        
            <form action="/login" method="POST">

                <h4 id="loginHead" class="mx-3">Quiztron</h4>

                <div class="form-group">
                    <input type="username" name="username" class="form-control input-sm" id="inputUsername" placeholder="Username" aria-describedby="emailHelp">
                </div>

                <div class="form-group">
                    <input type="password" name="password" class="form-control" id="inputPassword1" placeholder="Password">
                </div>
            
                <button type="submit" class="btn btn-success btn-block"><b>Login</b></button>
            </form>
            
            <div class="my-3 errMessage">
                <%= messages %>
            </div>

        </div>
        
        <div class="right">
            
        </div>
    </div>

    <%- include('partials/footerLinks') %>

</body>
	
	
</html>
